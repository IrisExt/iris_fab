{% extends 'base.html.twig' %}
{% trans_default_domain 'Comites' %}
{% block title %}{{ 'comite.liste.creercomite'|trans }}{% endblock %}

  {% block stylesheets1 %}
      <!-- tabs CSS
          ============================================ -->
      <link rel="stylesheet" href="{{ asset('css/tabs.css') }}">
      <link rel="stylesheet" href="{{ asset('css/chosen/bootstrap-chosen.css') }}">

  {% endblock %}
{% block body %}
    <div class="advanced-form-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <div class="sparkline8-list shadow-reset">
                        <div class="sparkline8-hd">
                            <div class="main-sparkline8-hd">
                                <h1>{{ 'comite.liste.creercomite'|trans }}</h1>
                                <div class="sparkline8-outline-icon">
                                    <a href="{{ path('list_comite') }}">{{ 'comite.form.retour'|trans }}</a>
                                </div>
                            </div>
                        </div>
                        <div class="sparkline8-graph">
                            {{ form_start(form) }}
                            {{ form_row(form.idAppel) }}
                            {{ form_row(form.lbAcr) }}
                            {{ form_row(form.lbTitre) }}
                            {{ form_row(form.lbDesc) }}
                            {{ form_row(form.iddepartement) }}
                            {{ form_row(form.president) }}
                            {{ form_row(form.cpsprincipal) }}
                            {{ form_row(form.cpsSecondaire) }}
                            <div class="footer-text-right">
                                <button class="btn btn-primary">{{ 'comite.form.creer'|trans }}</button>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <!-- chosen JS
              ============================================ -->
        <script src="{{ asset('js/chosen/chosen.jquery.js') }}"></script>
        <script src="{{ asset('js/chosen/chosen-active.js') }}"></script>

    {% endblock %}
{% endblock %}
