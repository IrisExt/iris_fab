<form method="post" action="{{ path('tg_message_delete', {'idMessage': tg_message.idMessage}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce message?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tg_message.idMessage) }}">
    <button class="btn">Delete</button>
</form>
