<div class="row">
  <div class="row">
    <div class="col-md-12">
      <input type="text" class="js-datepicker date_rendu_current">
    </div>
  </div></br>
  <div class="row">
    <div class="col-md-12">
        <button type="submit" class="btn btn-warning send-date" data-id="{{ path('set_ajax_date_rendu') }}" data-idprojet="{{idProjet}}" data-idaffectation="{{idAffectation}}" data-idpersonne="{{ tgPersonne.idPersonne }}">Modifier</button>
    </div>
