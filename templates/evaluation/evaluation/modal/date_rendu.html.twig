{% block javascripts %}
    <script>
        $(document).on("click", ".send-date", function () {
          // AJAX request
          //console.log($('textarea#add_comment').val());
          $.ajax({
              url: $(this).data('id'),
              type: 'POST',
              data: 'idPersonne='+ $(this).data('idpersonne')+'&idProjet='+ $(this).data('idprojet')+'&idAffectation='+ $(this).data('idaffectation')+'&dhRendu='+ $('input.date_rendu_current').val(),
              success: function (response) {
                  $('.close').trigger('click');
                  document.location.reload(true);
              },
              error: function (XMLHttpRequest, textStatus, errorThrown) {
                  alert('Error : ' + errorThrown);
              }
          });
        });
    </script>
{% endblock %}

