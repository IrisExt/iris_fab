{% if widgetSee == true and (soumAppels is not empty) %}
    <div class="widget col-lg-3 col-md-6 col-sm-12 col-xs-12">
        <div class="income-dashone-total shadow-reset nt-mg-b-30 res-mg-t-30">
            <div class="sparkline13-hd">
                <div class="main-sparkline12-hd">
                    <div class="row">
                        <div class="col-sm-2">
                            <h1>{{ 'widget.porteurAppel'|trans }} </h1>
                        </div>
                        <div class="col-sm-10" style="text-align:right">
                            <i>{{ 'widget.porteurSoumettreProjet'|trans }}</i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="income-dashone-pro">
                {% set idFormul = 1 %}
                {% for tlformAppel  in soumAppels %}
                    {#                    {{ dump(tlformAppel.idAppel.niveauEnCours.idTypeNiveu) }}#}
                    {% if tlformAppel.getIdFormulaire %}
                        {% set idFormul = tlformAppel.getIdFormulaire.getIdFormulaire %}
                    {% endif %}
                    {% if tlformAppel.idAppel.niveauEnCours.idPhase.idPhaseRef.idPhaseRef == 1 %}  <!-- phase 1 affichage d'aapg -->
                        <div class="income-rate-total">
                            <p>{{ tlformAppel.idAppel }}</p>
                            <span class="price-graph">
                                <a href="{{ path('bloc', { tgAppelProj:  tlformAppel.getIdAppel().getIdAppel(), tgFormulaire: idFormul, tgBloc: bloc, idProjet: '' }) }}"
                                   class="btn btn-outline-primary btn-sm soumissionPs">{{ 'widget.porteurSoumettreProjet'|trans }}
                                    <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                                </a>
                            </span>
                        </div>
                    {% endif %} <!-- fin phase 1 -->
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
{% if poursuiSoumAppels is not empty %}
    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
        <div class="income-dashone-total shadow-reset nt-mg-b-30 res-mg-t-30">
            <div class="sparkline13-hd">
                <div class="main-sparkline12-hd">
                    <div class="row">
                        <div class="col-sm-3">
                            <h1>{{ 'widget.projets'|trans }} </h1>
                        </div>
                        <div class="col-sm-9" style="text-align:right">
                            <i>{{ 'widget.porteurPoursuivreProjet'|trans }}</i>
                        </div>
                    </div>
                </div>
                <div class="sparkline12-outline-icon">
                </div>
            </div>
            <div class="income-dashone-pro">

                {% for tlformAppelNotIn  in poursuiSoumAppels %}

                    {% set nbProj = 1 %}
                    {% set idFormul = tlformAppelNotIn.getIdAppel().niveauEnCours.idPhase.tlFormulaireAppel[0].idFormulaire.idFormulaire ?: 1%}
                    <div class="income-rate-total">
                        <div class="row">
                                <div class="col-lg-8">
                        <p>{{ tlformAppelNotIn.idAppel }} /
                            <small>{{ tlformAppelNotIn.idAppel.niveauEnCours.idPhase }}</small> :
                            {% if tlformAppelNotIn.lbAcro == '' %}
                                Projet ({{ nbProj }})
                                {% set nbProj = nbProj + 1 %}
                            {% else %}
                                {{ tlformAppelNotIn.lbAcro|default('projet sans accronyme') }}
                            {% endif %}
                        </p>
                                </div>
                        <span class="price-graph">
                            <a href="{{ path('bloc', { tgAppelProj:  tlformAppelNotIn.getIdAppel().getIdAppel(), tgFormulaire: idFormul, tgBloc: bloc, idProjet: tlformAppelNotIn.getIdProjet()}) }}"
                               class="btn btn-link btn-sm soumissionPp">Modifier
                                <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                            </a>
                        </span>
                    </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
