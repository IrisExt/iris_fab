{% block stylesheets %}
<style>
.tree, .tree ul {
margin:0 0 30px 0;
padding:0;
list-style:none
}
.tree ul {
margin-left:2em;
position:relative
}
.tree ul ul {
margin-left:.5em
}
.tree ul:before {
content:"";
display:block;
width:0;
position:absolute;
top:0;
bottom:0;
left:0;
border-left:1px solid
}
.tree li {
margin-top:15px;
padding:0 1em;
line-height:2em;
color:#303030;
font-weight:400;
position:relative
}
.tree ul li:before {
content:"";
display:block;
width:10px;
height:0;
border-top:1px solid;
margin-top:-1px;
position:absolute;
top:1em;
left:0
}
.tree ul li:last-child:before {
background:#fff;
height:auto;
top:1em;
bottom:0
}
.indicator {
margin-right:5px;
font-size: 25px;
}
.tree li a {
text-decoration: none;
color:#303030;
}
.tree li button, .tree li button:active, .tree li button:focus {
text-decoration: none;
color:#369;
border:none;
background:transparent;
margin:0px 0px 0px 0px;
padding:0px 0px 0px 0px;
outline: 0;
}

    .projet_name {
        font-size: large;
        color: #000;
    }

    .menu_projet {
        background-color: #fff;
        padding: 15px;
        margin-left: 15px;
    }
    .project {
        font-size: 18px;
        font-weight: 500;
    }

.btn-disabled,
.btn-disabled[disabled] {
    opacity: .4;
    cursor: default !important;
    pointer-events: none;
}
</style>
{% endblock %}
{% block list_blocs %}
<div class="breadcome-area mg-b-30 small-dn">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcome-list shadow-reset">
                    <div class="row">
                       <h3 align="center">{{ lbAppel }}</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="row">
    <div class="col-sm-3">
        <div class="advanced-form-area mg-b-15">
            <div class="container-fluid">
                <div class="sparkline8-list shadow-reset">
                    <div class="sparkline8-hd">
                        <div class="main-sparkline8-hd">
                            <h1><i class="indicator fa big-icon fa-folder-open-o"></i>Projet :<br><br><p style="text-align: center">{{ projet }}</p>
                            </h1>
                        </div>
                    </div>
                    <div class="sparkline8-graph">
                        <ul id="tree2">
                            <ul>
                                {% for bloc in list_bloc %}
                                        {% if bloc.form_type == 'BlPartenariatType' %}
                                            <li id="partenaire"
                                                class="{% if(idBloc == bloc.id_bloc) %}opened{% endif %}">
                                                <a class="first {% if '' == id_instrument %} othersBloc {% endif %}"
