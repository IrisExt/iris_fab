                                                        {% if validation %}<i class="fa fa-check"
                                                                              style="color: green"></i>{% else %}<i
                                                                class="fa fa-times" style="color: red"></i>{% endif %}
                                                    {% endif %}
                                                {% endfor %}
                                                <ul class="vide">
                                                    {% for key, partenaires in listePartenaires %}
                                                        <li class="{% if(app.request.get('p') == key) %}opened{% endif %}">
                                                            <a class="first"
                                                               href="?p={{ key }}">
                                                                {{ partenaires }}
                                                            </a>
                                                            <ul class="vide"></ul>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                        {%  else %}
                                            <li class="{% if(idBloc == bloc.id_bloc) %}opened{% endif %}">
                                                <a class="first {% if bloc.form_type != 'BlInstFiType' and '' == id_instrument %} othersBloc {% endif %}"
                                                   href="{{ path('bloc', { tgAppelProj: idAppel, tgFormulaire: formulaire.idFormulaire, tgBloc: bloc.id_bloc, idProjet:idProjet }) }}">
                                                    {{ bloc.libelle }}
                                                </a>
                                                {#                                        <a href="#" data-id="{{ path('enreg_projet',{'idProjet' :  idProjet, })  }}" class="first" >#}
                                                {#                                        {{ bloc.libelle }}#}
                                                {#                                        </a>#}
                                                {% for key, validation in blocValidation %}
                                                    {% if(bloc.id_bloc == key) %}
                                                        {% if validation %}<i class="fa fa-check"
                                                                              style="color: green"></i>{% else %}<i
                                                                class="fa fa-times" style="color: red"></i>{% endif %}
                                                    {% endif %}
                                                {% endfor %}
                                                <ul class="vide"></ul>
                                            </li>
                                        {%  endif %}
                                {% endfor %}
                            </ul>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>
<script src="{{ asset('js/duallistbox/jquery.bootstrap-duallistbox.js') }}"></script>
<script src="{{ asset('js/duallistboxcustom.js') }}"></script>
<script>

    $(function(){
        $('.opened').before("<i class='indicator fa big-icon " + openedClass + "'></i>");
    });

    $.fn.extend({
        treed: function (o) {

            var openedClass = 'glyphicon-minus-sign';
            var closedClass = 'glyphicon-plus-sign';

            if (typeof o != 'undefined'){
                if (typeof o.openedClass != 'undefined'){
                    openedClass = o.openedClass;
                }
                if (typeof o.closedClass != 'undefined'){
                    closedClass = o.closedClass;
                }
            };

            //initialize each of the top levels
            var tree = $(this);
            tree.addClass("tree");

            tree.find('li').has(".plein").each(function () {
                var branch = $(this); //li with children ul

                if(branch.hasClass('opened')) {
                    branch.prepend("<i class='indicator fa big-icon " + openedClass + "'></i>");
                }
                 else{
                     branch.prepend("<i class='indicator fa big-icon " + closedClass + "'></i>");
                 }

                branch.addClass('branch');
                branch.on('click', function (e) {
                    if (this == e.target) {
                        var icon = $(this).children('i:first');
                        icon.toggleClass(openedClass + " " + closedClass);
                        $(this).children().children().toggle();
                    }
                });
                branch.children().children().toggle();
            });

            tree.find('li').has(".vide").each(function () {
                var branch = $(this);
                if(branch.hasClass('opened')){
                    branch.prepend("<i class='indicator fa big-icon " + openedClass + "'></i>");
                    if(branch.has('#partenaire')) {
                        $(this).children().children().toggle();
                    }
                }else{
                    branch.prepend("<i class='indicator fa big-icon " + closedClass + "'></i>");
                }
                branch.addClass('notbranch');
                branch.children().children().toggle();
            });

            tree.find('li').has(".othersBloc").each(function () {
                var branch = $(this);
              branch.children().addClass('btn-disabled');
            });

            //fire event from the dynamically added icon
            tree.find('.branch .indicator').each(function(){
                $(this).on('click', function () {
                    $(this).closest('li').click();
                });
            });
            //fire event to open branch if the li contains an anchor instead of text
            tree.find('.branch').each(function () {
                $(this).on('click', function (e) {
                        $(this).closest('li').click();
                        e.preventDefault();
                });
            });
            //fire event to open branch if the li contains a button instead of text
            tree.find('.branch>button').each(function () {
                $(this).on('click', function (e) {
                    $(this).closest('li').click();
                    e.preventDefault();
                });
            });

        }
    });

    //Initialization of treeviews
    $('#tree2').treed({openedClass:'fa-folder-open-o', closedClass:'fa-folder-o'});

    </script>
{% endblock %}