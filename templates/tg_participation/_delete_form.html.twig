<form method="post" action="{{ path('tg_participation_delete', {'idParticipation': tg_participation.idParticipation}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce participant?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tg_participation.idParticipation) }}">
    <button class="btn btn-danger"><span class="adminpro-icon adminpro-danger-error"></span> {{ 'action.delete'|trans }}</button>
</form>
